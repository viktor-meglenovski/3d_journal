@model List<UserDTO>
<style>
    .profile-image {
        height: 320px;
    }

    .project-image {
        height: 100px;
    }
</style>

<div class="container border border-dark rounded mt-2">
    <h1 class="text-center mt-2">Export user information to PDF</h1>
    <hr />
    <table class="table col-8" id="user-table">
        <thead>
            <tr class="text-center">
                <th class="align-middle">Username</th>
                <th class="align-middle">Full name</th>
                <th class="align-middle"></th>
            </tr>
        </thead>
        <tbody class="tbody-helper">
            @foreach (UserDTO u in Model)
            {
                <tr>
                    <td class="align-middle">@u.Email</td>
                    <td class="align-middle">@u.FirstName @u.LastName</td>
                    <td class="align-middle"><a class="btn btn-primary btn-block" href="/User/ExportUser/@u.Id">Export to PDF</a></td>
                </tr>
            }

        </tbody>
    </table>
    <hr/>
</div>
@section Scripts{
    <script>
        $("#user-table").DataTable({
            "columns": [
                { "name": "username", "orderable": false },
                { "name": "fullname", "orderable": false },
                { "name": "options", "orderable": false }
            ],
            "ordering": false,
            "bLengthChange": false,
            "searching": false,
            "pageLength": 4,
            "bInfo": false,
            "language": {
                "paginate": {
                    "previous": "<<",
                    "next": ">>"
                }
            }
        });
        $("#user-table_paginate").addClass(["text-center", "col-12"]);
    </script>
}